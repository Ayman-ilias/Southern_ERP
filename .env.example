# ==============================================
# Southern ERP - Environment Configuration
# ==============================================
# Copy this file to .env and update the values
# IMPORTANT: Never commit .env to version control!
# ==============================================

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================
# API URL - Change this to your server's IP or domain
# For local development: http://localhost:8000
# For production: http://YOUR_SERVER_IP:8000 or https://api.yourdomain.com
NEXT_PUBLIC_API_URL=http://localhost:8000

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=southern_erp_2024
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=rmg_erp

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# ==============================================
# JWT AUTHENTICATION
# ==============================================
# IMPORTANT: Generate a strong secret key for production!
# You can generate one using: openssl rand -hex 32
SECRET_KEY=change-this-to-a-strong-secret-key-in-production

# JWT Algorithm (don't change unless you know what you're doing)
ALGORITHM=HS256

# Token expiration in minutes (10080 = 7 days)
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ==============================================
# APPLICATION SETTINGS
# ==============================================
ENVIRONMENT=production
DEBUG=false
